@model IEnumerable<LearningApp.Models.Plan>
@{
    ViewBag.Title = "Home Page";
}

<section id="header" class="d-flex justify-content-center align-items-center">

    <div class="container bg-transparent pt-4 text-white text-center">
        <h3 class="display-3 m-2">MODERN LEARNING</h3>
        <h1 class="display-1">C SHARP</h1>
        <p class="lead m-4 d-none d-md-block">Coding is the most fun you can have by yourself.</p>
        <button class="btn btn-lg btn-warning start font-weight-bold px-5" data-toggle="modal">
            @Html.ActionLink("Start", "New", "Enrolments", null, new { @class = "btn font-weight-bold text-uppercase" })
        </button>
    </div>
</section>

<div class="p container bg-light pt-3 mt-3 mb-5 d-flex justify-content-between align-items-center">
    <div class="plans container m-0 bg-light text-dark text-center">
        <div><h2 class="text-center m-3 p-5 font-weight-bold"> Choose your plan</h2></div>
        <div class="row ml-5">


            @foreach (var plan in Model)
            {
                <div class="col-md-4 col-sm-12">
                    <div class="card mt-3 shadow-sm" style="height:300px;width:280px;">
                        <div class="card-body p-3">
                            <p class="font-weight-normal pt-4">@plan.Name</p>
                            <h4 class="p-2 mt-3 font-weight-bold">@plan.Fee$/mo</h4>
                            @{ var price = 19.99 * 12 - @plan.Fee * 12;
                                var res = price > 0 ? "Save "+ @price + "$" : "/";

                                }

                            <p class="p-4"> @res </p>
                            <button class="btn bg-ljubicasta start font- pl-3 pr-3" data-toggle="modal">
                                @Html.ActionLink("Start", "New", "Enrolments", null, new { @class = "btn font-weight-lighter text-uppercase" })
                            </button>

                        </div>

                    </div>

                </div>
            }

        </div>
    </div>
</div>
