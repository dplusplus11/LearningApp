                            <h4 class="pt-2">@Html.ActionLink(course.Name, "Details", "Courses", new { id = course.Id }, new { @class = "text-decoration-none text-secondary stretched-link" })</h4>
                            <p class="pt-3"> @course.Introduction</p>

                        </div>

                    </div>
                </div>
            }

        </div>
    </section>

}



