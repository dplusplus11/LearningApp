@model IEnumerable<LearningApp.Models.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (!Model.Any())
{
    <p>No courses.</p>
}
else
{

    <section class="container">
        <h2 class="mb-5 mt-5">All courses </h2>

