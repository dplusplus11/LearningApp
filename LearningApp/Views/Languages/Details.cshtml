@model LearningApp.Models.Language

@{
    ViewBag.Title = "LanguageInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main role="main">
    <section class="container">
        <div class="row ">
            <div class="col-lg-12 col-md-6 col-sm-12 bg-white">
                <h1>@Model.Name</h1>
            </div>
            <div class="row">
                <div class="btn-group-sm" role="group">
                    <p class="m-1"> @Html.ActionLink("Edit", "Edit", "Languages", new { id = Model.Id }, new { @class = "btn btn-secondary" }) </p>
                    <p class="m-1"> @Html.ActionLink("Delete", "Delete", "Languages", new { id = Model.Id }, new { @class = "btn btn-secondary" }) </p>
                </div>
            </div>


        </div>
    </section>
</main>



